<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.csci5115_map2.report_check">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/toolbar4">

        <TextView
            android:text="Report Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/report"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_edit"
            android:layout_below="@+id/toolbar4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="12dp"
            android:id="@+id/edit"
            android:background="@android:color/transparent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_below="@+id/edit"
            android:layout_centerHorizontal="true"
            android:text="the Lane is closed until December 20th, please choose another way" />

        <fragment
            android:id="@+id/map4"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/editText3"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/imageButton3"
            android:background="@android:color/transparent"
            android:layout_below="@+id/map4"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/picture_frame"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="remove report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:id="@+id/button4"
            android:textColorLink="@android:color/holo_red_dark" />

    </RelativeLayout>
</RelativeLayout>
